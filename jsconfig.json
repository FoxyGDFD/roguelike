{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/lib/core/*"],
      "@domain/*": ["src/domain/*"],
      "@ia/*": ["src/interface-adapters/*"],
      "@ui/*": ["src/presentation/*"],
      "@lib/*": ["src/lib/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["**/*.js", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
